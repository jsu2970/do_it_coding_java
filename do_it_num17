import java.util.*;

public class do_it_num17 {  //1427
    public static void main(String arg[]) {
        Scanner sc = new Scanner(System.in);

        System.out.print("숫자 입력: ");
        String num = sc.nextLine();

        long beforeTime = System.currentTimeMillis();  //시작 시간

        int length = num.length();
        int numArr[] = new int[length];  //분리한 숫자를 저장할 변수

        //숫자를 분리
        for (int i = 0; i < length; i++) {
            numArr[i] = Integer.parseInt(num.substring(i, i + 1));  //문자열을 하나씩 잘라 숫자로 변환하기
        }

        //선택정렬로 내림차순 정렬하기
        for (int i = 0; i < length; i++) {
            int max = -1;
            int maxIndex = -1;
            int temp;

            for (int j = i; j < length; j++) {
                if (numArr[j] > max) {
                    max = numArr[j];
                    maxIndex = j;
                }
            }

            //최대값을 맨 앞으로 보냄
            temp = numArr[maxIndex];
            numArr[maxIndex] = numArr[i];
            numArr[i] = temp;
        }

        for (int number : numArr) {
            System.out.print(number);
        }
        System.out.println();

        //총 걸린 시간을 계산하는 과정
        long afterTime = System.currentTimeMillis();
        System.out.println("총 소요 시간: " + (afterTime - beforeTime) / 1000 + "초");
    }
}
