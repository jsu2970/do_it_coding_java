import java.util.*;

public class do_it_num13 {  //2164
    public static void main(String arg[]) {
        Scanner sc = new Scanner(System.in);

        System.out.print("카드의 개수 입력: ");
        int num = sc.nextInt();

        long beforeTime = System.currentTimeMillis();  //시작 시간

        //큐를 이용하여 해결함
        Queue<Integer> que = new LinkedList<>();

        //큐에 카드 넣기
        for (int i = 1; i <= num; i++) {
            que.add(i);
        }

        int lastNumber = 0;
        //큐에서 카드를 꺼내기 시작함
        while (true) {
            lastNumber = que.remove();
            if (que.isEmpty()) {  //마지막으로 남은 수
                break;
            }
            que.add(que.remove());
        }

        System.out.println("마지막으로 남은 수: " + lastNumber);

        //총 걸린 시간을 계산하는 과정
        long afterTime = System.currentTimeMillis();
        System.out.println("총 소요 시간: " + (afterTime - beforeTime) / 1000 + "초");
    }
}
