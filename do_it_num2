import java.util.*;

public class test {
    public static void  main(String arg[])
    {
        Scanner sc = new Scanner(System.in);
        int numberOfObject;

        System.out.print("과목 개수 입력 (0 < n <= 1000): ");
        numberOfObject = sc.nextInt();

        //배열 초기화
        int arr[] = new int[numberOfObject];
        double newGrade[] = new double[numberOfObject];

        //각 과목의 성적을 입력받는 과정
        System.out.print("각 과목의 성적 입력: ");
        for (int i = 0; i < numberOfObject; i++)
        {
            arr[i] = sc.nextInt();
        }

        //시간을 기록하기 위한 과정
        long beforeTime = System.currentTimeMillis();

        //과목의 최대값을 찾는 과정
        int max = 0;
        for (int number : arr)
        {
            if (max < number)
            {
                max = number;
            }
        }

        //새로운 배열에 새 점수를 부여하는 과정
        for (int i = 0; i < numberOfObject; i++)
        {
            newGrade[i] = (double)arr[i] / max * 100;
        }

        //새 점수의 평균을 구하는 과정
        double sum = 0;
        for (double number : newGrade)
        {
            sum += number;
        }
        double average = sum / numberOfObject;

        System.out.println("새로운 평균: " + average);

        //총 걸린 시간을 계산하는 과정
        long afterTime = System.currentTimeMillis();
        System.out.println("총 소요 시간: " + (afterTime - beforeTime) / 1000 + "초");
    }
}
